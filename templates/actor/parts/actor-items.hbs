{{! Question Card - Appearance }}
<div class="pink-card flex-col">
	<h3 class="pp-font-display">My appearance is...</h3>

	{{editor
		enriched.appearances
		target="system.appearance"
		engine="prosemirror"
		button=true
		editable=editable
	}}

</div>

<table class="pp-item-table pink-card flex-col">
	<thead>
		<tr class="pp-items-list-header grid grid-5">
			<th class="purse">{{localize "Name"}}</th>
			<th class="purse">Weight</th>
			<th class="purse">Quantity</th>
			<th class="purse">Roll</th>
			<th class="item-controls purse">
				<a
					class="item-control item-create"
					title="Create Item"
					data-type="item"
				>
					<i class="fas fa-plus-circle"></i>
				</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{{#each gear as |item id|}}
			<tr class="item pp-item-row grid grid-5" data-item-id="{{item._id}}">
				{{! Name & Image }}
				<td class="item-name flex-row">
					<div class="item-image">
						<a class="rollable pp-item-roll-trigger" data-roll-type="item">
							<img
								src="{{item.img}}"
								title="{{item.name}}"
								width="24"
								height="24"
							/>
						</a>
					</div>
					<h4 class="">{{item.name}}</h4>
				</td>

				{{! Properties }}
				<td class="text-center">{{item.system.weight}}</td>
				<td class="text-center">{{item.system.quantity}}</td>
				<td class="text-center" style="font-weight: bold;">
					{{#if item.system.roll.diceNum}}
						{{item.system.roll.diceNum}}{{item.system.roll.diceSize}}
					{{else}}
						â€”
					{{/if}}
				</td>

				{{! Controls }}
				<td class="item-controls">
					<div class="flex-row">
						<a class="item-control item-edit" title="Edit"><i
								class="fas fa-feather-alt"
							></i></a>
						<a class="item-control item-delete" title="Delete"><i
								class="fas fa-times"
							></i></a>
					</div>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>